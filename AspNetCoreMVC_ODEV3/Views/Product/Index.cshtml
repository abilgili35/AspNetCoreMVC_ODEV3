@model List<AspNetCoreMVC_ODEV3.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<br />
<a href="~/Product/Create" class="btn btn-danger">Create</a>
<br />
<table>
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            @foreach(AspNetCoreMVC_ODEV3.Models.Product p in Model)
            {
                <tr>
                    <td>@p.ProductId</td>
                    <td>@p.ProductName</td>
                    <td>@p.UnitPrice</td>
                    <td>@p.UnitsInStock</td>
                    <td>
                        <a href="~/Product/Update/@p.ProductId" class="btn btn-primary">Update</a>
                        <a href="~/Product/Delete/@p.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

